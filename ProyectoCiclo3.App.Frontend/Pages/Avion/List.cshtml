@page
@model ProyectoCiclo3.App.Frontend.Pages.ListAvionModel
@{
}

<h1>Listado de Aviones</h1>
<table class="table">

  <thead>
    <tr>
      <th>ID</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th># Asientos</th>
      <th>#Baños</th>
      <th>Capacidad máxima</th>
    </tr>
  </thead>
  @foreach (var avion in Model.Aviones)
  {
    <tbody>
      <tr>
        <td>@avion.Id</td>
        <td>@avion.Marca</td>
        <td>@avion.Modelo</td>
        <td>@avion.Numero_asientos</td>
        <td>@avion.Numero_banos</td>
        <td>@avion.Capacidad_maxima</td>
        <td>
          <a class="btn btn-info" asp-page="./Details" asp-route-AvionId="@avion.Id"><i class="fas fa-adjust"></i>Ver</a>
          <a class="btn btn-info" asp-page="./Edit" asp-route-avionId="@avion.Id"><i class="fas fa-adjust"></i>Editar</a>
          <form method="POST">
            <input type="number" class="d-none" id="Id" asp-for="@avion.Id">
            <button type="submit" class="btn btn-danger">Eliminar</button>
          </form>
        </td>
      </tr>
    </tbody>
  }
</table>
